{
  "expo": {
    "name": "Omnid",
    "slug": "omnid-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/omnid.png",
    "scheme": "omnid",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icons/omnid-frame.png",
      "backgroundColor": "#000000",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/omnid.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.facebook.hermes.unicode.** { *; }\n-keep class com.facebook.jni.** { *; }\n-keep public class com.horcrux.svg.** {*;}",
            "newArchEnabled": true,
            "compileSdkVersion": 33,
            "targetSdkVersion": 31,
            "minSdkVersion": 23,
            "buildToolsVersion": "31.0.0"
          },
          "ios": {
            // "flipper": true,
            // "newArchEnabled": true,
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      "react-native-nfc-manager",
      "expo-router"
    ],
    "android": {
      "package": "com.cupoc.omnid",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/omnid.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "omnid",
              "host": "*"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "otpauth",
              "host": "*"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.CAMERA", // Qr Scanner
        "android.permission.RECORD_AUDIO", // Qr Scanner,
        "android.permission.NFC"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "ios": {
      "bundleIdentifier": "com.cupoc.omnid",
      "supportsTablet": true,
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "omnid",
          "otpauth"
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "omnid",
              "otpauth"
            ]
          }
        ],
        "CADisableMinimumFrameDurationOnPhone": true,
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      },
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "experiments": {
      "tsconfigPaths": true,
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "36f03bb5-6dde-49e8-8655-444bf2d7eed7"
      }
    }
  }
}